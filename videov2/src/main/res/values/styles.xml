<resources>

    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <item name="colorPrimary">#333333</item>
        <item name="colorPrimaryDark">#333333</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerItemStyle">@style/DefaultSpinnerItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/DefaultSpinnerItemStyle</item>
    </style>

    <style name="DefaultSpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textSize">12dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="wx_login_style" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
